<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="styles"/>
    <body>
        <referenceContainer name="content">
            <block class="Stackexchange\ProductComment\Block\Adminhtml\Comment\Grid" name="productcomment_grid">
                <block class="Magento\Backend\Block\Widget\Grid" name="productcomment_grid.grid" as="grid">
                    <arguments>
                        <argument name="id" xsi:type="string">comment_id</argument>
                        <argument name="dataSource" xsi:type="object">Stackexchange\ProductComment\Model\ResourceModel\ProductComment\Collection</argument>
                        <argument name="default_sort" xsi:type="string">comment_id</argument>
                        <argument name="default_dir" xsi:type="string">ASC</argument>
                        <argument name="save_parameters_in_session" xsi:type="string">1</argument>
                    </arguments>
                    <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" name="productcomment_grid.grid.columnSet" as="grid.columnSet">
                        <arguments>
                            <argument name="rowUrl" xsi:type="array">
                                <item name="path" xsi:type="string">*/*/edit</item>
                            </argument>
                        </arguments>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="comment_id">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Comment ID</argument>
                                <argument name="index" xsi:type="string">comment_id</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="customer_eamil">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Email</argument>
                                <argument name="index" xsi:type="string">customer_email</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="customer_id">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Customer ID</argument>
                                <argument name="index" xsi:type="string">customer_id</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="customer_guest">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Is Guest</argument>
                                <argument name="index" xsi:type="string">customer_guest</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="product_id">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Product ID</argument>
                                <argument name="index" xsi:type="string">product_id</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="created_at">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Created</argument>
                                <argument name="index" xsi:type="string">created_at</argument>
                                <argument name="type" xsi:type="string">date</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>

                    </block>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>